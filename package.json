{
  "name": "@nasriya/cron",
  "version": "1.0.0",
  "description": "A package to schedule cron-jobs",
  "main": "./dist/cjs/manager.cjs",
  "module": "./dist/esm/manager.mjs",
  "types": "./dist/@types/manager.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/manager.cjs",
      "require": "./dist/cjs/manager.mjs",
      "types": "./dist/@types/manager.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nasriyasoftware/NasriyaCron"
  },
  "maintainers": [
    {
      "name": "Ahmad Nasriya",
      "email": "ahmad@nasriya.net",
      "url": "https://www.linkedin.com/in/ahmadnasriya/"
    }
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs  && npm run rename && npm run copyFiles",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "rename": "mod-js",
    "copyFiles": "ns-copySrc",
    "test": "jest"
  },
  "keywords": [
    "cron",
    "job",
    "schedule",
    "task"
  ],
  "author": "Nasriya Software, LLC.",
  "license": "Nasriya License",
  "dependencies": {
    "cron-time-generator": "^2.0.3",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "ts-jest": "^29.1.4"
  },
  "bugs": {
    "url": "https://github.com/nasriyasoftware/NasriyaCron/issues"
  },
  "homepage": "https://github.com/nasriyasoftware/NasriyaCron#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node-cron": "^3.0.11",
    "@types/node-schedule": "^2.1.7",
    "nasriya-copyfiles": "github:nasriyasoftware/CopyFiles",
    "nasriya-modularizejs": "github:nasriyasoftware/ModularizeJS"
  }
}
